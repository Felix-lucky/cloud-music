{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "api/*": ["src/api/*"],
      "assets/*": ["src/assets/*"],
      "views/*": ["src/views/*"],
      "utils/*": ["src/utils/*"],
      "styles/*": ["src/styles/*"],
      "context/*": ["src/context/*"]
    }
  },
  "include": ["src"]
}
